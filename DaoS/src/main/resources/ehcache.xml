<ehcache  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="ehcache.xsd" 
	updateCheck="true"
	monitoring="autodetect" 
	dynamicConfig="true">
	<diskStore path="java.io.tmpdir" />
	<defaultCache maxElementInMemory="20000" eternal="false"
		timeToIdleSeconds="300" timeToLiveSeconds="300" overflowToDisk="true"
		diskPersistent="false" diskExpiryThreadIntervalSeconds="300"
		memoryStoreEvictionPolicy="LRU" />
	<cache name="by.academy.it.Tupebets" maxElementsInMemory="15000"
		eternal="true" overflowToDisk="false" />
</ehcache>